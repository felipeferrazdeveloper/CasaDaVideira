@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Erro";
}

<h1 class="text-danger" style="margin-top: 2em; margin-left: 3em;">Erro [@(Model.ActionName)]</h1>
<p style="margin-left: 3em;">
    @Model.Exception.Message
</p>
<hr />
<h2 style="margin-left: 3em;" class="text-danger">Detalhes:</h2>
<p style="margin-left: 3em; margin-bottom: 3em">
    @Model.Exception
</p>
