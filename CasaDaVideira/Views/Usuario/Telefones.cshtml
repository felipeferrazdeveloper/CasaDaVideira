@model CasaDaVideira.Model.Database.Model.Usuario

@{
    ViewBag.Title = "Telefones";
}

<h2>Telefones</h2>


<p>
    @Html.ActionLink("Inserir", "CriarTelefone", new { id = 0, idUsuario = Model.IdUsuario })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("DDD")
        </th>
        <th>
            @Html.DisplayName("Numero")
        </th>
        <th>
            @Html.DisplayName("Tipo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Telefones)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ddd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditarTelefone", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeletarTelefone", new { id = item.Id })
            </td>
        </tr>
    }

</table>
